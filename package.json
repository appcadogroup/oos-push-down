{
  "name": "acme",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "apps/frontend/extensions/*",
    "packages/*"
  ],
  "scripts": {
    "dev:worker": "npm run -w apps/worker dev",
    "dev:backend": "npm run -w apps/backend dev",
    "dev:frontend": "npm run -w apps/frontend dev -- --path ./ --tunnel-url 'https://ricotse.ngrok.dev:3011'",
    "db:generate": "npm run -w packages/db prisma:generate",
    "db:migrate": "npm run -w packages/db migrate:dev",
    "build:frontend": "npm run -w apps/frontend build --root ./ --config ./vite.config.js",
    "build:backend": "npm run -w apps/backend build",
    "build": "npm run -w apps/backend build && npm run -w apps/frontend build",
    "install:all": "npm install --workspaces"
  },
  "overrides": {
    "@shopify/shopify-api": "^11.14.1",
    "@shopify/shopify-app-session-storage-prisma": "^6.0.9"
  },
  "dependencies": {
    "@bull-board/api": "^6.12.5",
    "@bull-board/express": "^6.12.5",
    "bull": "^4.16.5"
  }
}
